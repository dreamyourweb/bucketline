/[if (gt IE 9)|!(IE)] <!--> <html lang=\"en\">

%head
  %title Bucket Line
  %meta{ :charset => "utf-8" }

  -# Uncomment to make IE8 render like IE7
  -# meta http-equiv="X-UA-Compatible" content="IE=7"
  
  -# Set the viewport width to device width for mobile
  %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

  %title= content_for?(:title) ? yield(:title) : "Untitled"

  -# Included CSS Files
  = stylesheet_link_tag "application"

  -# Included JS Files
  = javascript_include_tag "application"
  = javascript_include_tag "vendor/custom.modernizr"

  = csrf_meta_tag

  = render :partial => "layouts/ga"
  = render :partial => "layouts/bugherd"

%body{:class => (controller.controller_name == "initiatives" && (controller.action_name == "show" || controller.action_name == "index")) ? "home" : ""}

  = render :partial => "layouts/nav"
  
  #flashmessages
    = render 'layouts/flashmessages'

  - if current_user
    #feedback.hide-for-small
      = link_to new_message_path, class: "fancybox fancybox.ajax" do
        %h6 Feedback

  - if content_for?(:header)
    %header
      .row
        %section.header
          = yield(:header)
  - if content_for?(:sidebar)
    .row
      .small-9.columns.push-3
        = yield
      .small-3.columns.pull-9
        = yield(:sidebar)
  - elsif content_for?(:full)
    = yield(:full)   
  - else
    .row
      .small-12.columns
        = yield

  = render :partial => "layouts/footer"