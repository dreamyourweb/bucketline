<!DOCTYPE html>
<html>
<head>
  <title>Huis van Overvloed | Sociale Overwaarde Verbinder</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
	<%= render :partial => "layouts/ga" %>
</head>
<body class="<%= (controller.controller_name == "initiatives" && controller.action_name == "show") ? "home" : "" %>">
	<div class="navbar">
		<div class="navbar-inner">
			<div class="container">
				<a href="/" class="logo"></a>
				<%= render :partial => "layouts/login" %>
				<%= render :partial => "layouts/nav_tabs" %>
			</div>
		</div>
	</div>
	<div class="container main">
		<div id="flashmessages">
  			<%= render 'layouts/flashmessages' %>	
		</div>
		<% if current_user %>
			<div class="feedback">
				<%= link_to feedback_path, :class => "fancybox" do %>
					<%= image_tag "feedback_tab.png" %>
				<% end %>
			</div>
		<% end %>
		<section id="gridSystem">
			<%= yield %>
		</section>
	</div>
	<%= render :partial => "layouts/footer" %>
</body>
</html>
