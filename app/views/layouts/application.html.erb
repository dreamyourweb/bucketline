<!DOCTYPE html>
<html>
<head>
  <title>HvO</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container main">
		<div class="hero-unit">
			<h1>Overwaarde Verbinder</h1>
			<p>Beetje uitleg enzo</p>
		</div>

		<div class="alert-message info fade in">
			<% flash.each do |key, value| %>
				<%= content_tag(:div, value, :class => "site-flash #{key}") %>
			<% end %>
		</div>

		<section id="gridSystem">
			<%= yield %>
		</section>
	</div>
</body>
</html>
