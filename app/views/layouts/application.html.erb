<!DOCTYPE html>
<html>
<head>
  <title>HvO</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="notice">
		<% flash.each do |key, value| %>
				<%= content_tag(:div, value, :class => "site-flash #{key}") %>
		<% end %>
	</div>

	<%= yield %>
</body>
</html>
