<div class="row pull-right">
	<% if user_signed_in? %>
		<%= link_to "Uitloggen", root_url + "logout" %>
	<% else %>
		<%= link_to "Inloggen of aanmelden", root_url + "login" %>
	<% end %>
</div>
<nav class="row">
	<div class="span12">
		<ul class="nav nav-tabs">
			<li class=<%= get_active("home") %> ><%= link_to "Home", root_path %></li>
			<li class=<%= get_active("calendar") %> ><%= link_to "Project kalender", projects_path %></li>
			<li class=<%= get_active("dashboard") %> ><%= link_to "Alle benodigdheden", dashboard_path %></li>
			<% if user_signed_in? %>
				<li class=<%= get_active("profile") %> ><%= link_to "Mijn profiel", profile_path(@profile) %></li>
				<li class=<%= get_active("availability") %> ><%= link_to "Mijn beschikbaarheid", profile_available_dates_path(@profile) %></li>
				<% if current_user.admin %>
					<li class=<%= get_active("availability_dashboard") %> ><%= link_to "Beschikbaarheid specialisten", profile_availability_dashboard_path(@profile) %></li>
					<li class=<%= get_active("links") %> ><%= link_to "Alle bijdragen", links_path %></li>
				<% end %>
			<% end %>
		</ul>	
	</div>
</nav>
