<div class="row pull-right">
	<% if user_signed_in? %>
		<%= link_to "Uitloggen", logout_path %>
	<% else %>
		<%= link_to "Inloggen", login_path %> of <%= link_to "registreren", new_user_registration_path %>
	<% end %>
</div>
<nav class="row">
	<div class="span12">
		<ul class="nav nav-tabs">
			<li class=<%= get_active("home") %> ><%= link_to "Home", root_path %></li>
			<li class=<%= get_active("calendar") %> ><%= link_to "Project kalender", projects_path %></li>
			<li class=<%= get_active("dashboard") %> ><%= link_to "Alle benodigdheden", dashboard_path %></li>
			<% if user_signed_in? %>
				<li class=<%= get_active("profile") %> ><%= link_to "Mijn profiel en bijdragen", profile_path(@profile) %></li>
				<li class=<%= get_active("availability") %> ><%= link_to "Mijn beschikbaarheid", profile_available_dates_path(@profile) %></li>
				<% if current_user.admin %>
					<li class="dropdown">
						<a class="dropdown-toggle" data-toggle="dropdown" href="#">Admin<b class="caret"></b></a>
						<ul class="dropdown-menu">
							<li class=<%= get_active("availability_dashboard") %> ><%= link_to "Beschikbare specialisten", profile_availability_dashboard_path(@profile) %></li>
							<li class=<%= get_active("links") %> ><%= link_to "Alle bijdragen", links_path %></li>
							<li class=<%= get_active("profiles") %> ><%= link_to "Alle gebruikers", profiles_path %></li>
							<li class=<%= get_active("messages") %> ><%= link_to "Feedback berichten", messages_path %></li>
						</ul>
					</li>
				<% end %>
			<% end %>
		</ul>	
	</div>
</nav>
