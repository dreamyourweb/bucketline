<blockquote>
	<p><%= comment.body %></p>
	<small>
		<%= comment.author %>
		<% if user_signed_in? %>
			<%= link_to 'Verwijder reactie', question_comment_path(comment.question, comment), confirm: 'Weet je zeker dat je deze reactie wilt verwijderen?', method: :delete %> | 
			<%= link_to 'Bekijk extra info', question_comment_path(comment.question, comment) %>
		<% end %>
	</small> 
</blockquote>
