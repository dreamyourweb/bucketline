<%= form_for [@question, @comment] do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div>
		<%= f.label 'Naam:' %><br />    
		<%= f.text_field :author %>
 	</div>

	<div>
		<%= f.label 'Bericht:' %><br />    
		<%= f.text_field :body %>
 	</div>

	<div>
		<%= f.label 'Extra info en/of contactinformatie over jezelf en verwijzingen (alleen zichtbaar voor de vraagsteller):' %><br />    
		<%= f.text_area :info %>
 	</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
