<h2>Overzicht alle gebruikers voor <%= @initiative.name %></h2>

<p><%= link_to 'Nodig een nieuwe gebruiker uit voor deze Bucket Line', new_user_invitation_path %></p>	

<table class="admin-table table table-bordered table-striped">
	<tr>
		<th>Naam</th>
		<th>Expertise</th>		
		<th>Kan helpen met</th>		
		<th>Handige spullen in bezit</th>		
		<th>Telefoon</th>		
		<th>Email</th>		
		<th>Buddy bereidheid</th>		
		<th>Admin</th>		
	</tr>
	<% @users.each do |user| %>
		<tr>
			<td><%= user.name %></td>
			<td><%= user.profile.expertise %></td>
			<td><%= user.profile.willing_to_help_with %></td>
			<td><%= user.profile.tools_and_materials %></td>
			<td><%= user.profile.phone %></td>
			<td><%= user.email %></td>
			<td><%= "\u2713" if user.profile.willing_to_become_admin %></td>
			<td>
				<% if user != current_user %>
					<% user_role = get_user_role(@initiative, user) %>
					<%= form_for([@initiative, user_role]) do |f| %>
						<%= f.check_box :admin %> <%= f.submit "Update", :class => "btn", :confirm => "Weet je zeker dat je de rechten van deze gebruiker wilt aanpassen?" %>
					<% end %>
				<% else %>
					<%= check_box_tag '', '', true, :disabled => true %>
				<% end %>
			</td>
			<!-- <td><#= "\u2713" if user.initiative_admin(@initiative) %></td> -->
		</tr>
	<% end %>
</table>

