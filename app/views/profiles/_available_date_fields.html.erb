<blockquote class="fields smaller-font">
	<p>
		<div class="date-selector">
			<%= f.label 'Begin:' %> 
			<%= f.date_select :start_at %>
			<%= f.time_select :start_at, :ignore_date => true, :minute_step => 60, :hour_interval => 6 %>
	 	</div>
		<div class="date-selector">
			<%= f.label 'Einde:' %> 
			<%= f.date_select :end_at %>
			<%= f.time_select :end_at, :ignore_date => true, :minute_step => 60 %>
	 	</div>
	<p>
		<%= link_to_remove_fields "Verwijder datum", f %>
	</p>
</blockquote>
<hr>	

