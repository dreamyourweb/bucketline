- content_for :header do
  = render :partial => "shared/sub_nav" 

= hidden_field_tag "initiativeAdmin", current_user.initiative_admin(@initiative) 

.row
  .small-12.columns
    - if @initiative.projects.count == 0
      - if current_user.initiative_admin(@initiative)
        = alert("Er zijn nog geen klussen in de kalender geplaatst. Klik op een getalletje in de kalender om voor die dag een klus te plaatsen.")
      - else
        = alert("Er zijn nog geen klussen in de kalender geplaatst. Een beheerder moet eerst een klus plaatsen voor je kunt bijdragen.")

#projectCalendar
  = render partial: 'shared/calendar', locals: {year: @year, month: @month, events: @events_hash}

#itemModal.reveal-modal