<%= form_for(@project, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation" class="alert">
      <h2><%= pluralize(@project.errors.count, "error") %>:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="control-group">
		<%= f.label 'Titel:', :class => "control-label" %>
		<div class="controls"> 
			<%= f.text_field :query %>
		</div>
 	</div>
	<% if params[:year] %>
		<% pre_select_date = Time.mktime(params[:year], params[:month], params[:day]).to_date %>
	<% else %>
		<% pre_select_date = Date.today %>
	<% end %>
	<div class="date-selector control-group">
		<%= f.label 'Begin:', :class => "control-label" %> 
		<div class="controls"> 
			<%= f.date_select :start_at, :default => pre_select_date %>
		</div>
 	</div>
	<div class="date-selector control-group">
		<%= f.label 'Einde:', :class => "control-label" %> 
		<div class="controls"> 
			<%= f.date_select :end_at, :default => pre_select_date %>
		</div>
 	</div>
	<div class="field control-group">
		<%= f.label "Selecteer dagdelen:", :class => "control-label" %>
		<div class="controls"> 
			<%= f.select(:daypart, [["Ochtend", "Ochtend"], ["Middag", "Middag"], ["Avond", "Avond"], ["Nacht", "Nacht"]], {}, {:multiple => true}) %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label 'Opmerkingen:', :class => "control-label" %> 
		<div class="controls"> 
			<%= f.text_field :remark %>
		</div>
 	</div>
	<hr>

  <%= f.fields_for :items do |builder| %>
		<%= render "item_fields", :f => builder %>
	<% end %>
	<p><%= link_to_add_fields "Extra benodigdheid toevoegen", f, :items %></p>

  <div class="form-actions" style="padding-left:20px;">
    <%= f.submit "Project en items opslaan", :class => "btn btn-primary" %>
  </div>
<% end %>
