<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div>
		<%= f.label 'Titel:' %> 
		<%= f.text_field :query %>
 	</div>
	<div class="date-selector">
		<%= f.label 'Begin:' %> 
		<%= f.date_select :start_at %>
 	</div>
	<div class="date-selector">
		<%= f.label 'Einde:' %> 
		<%= f.date_select :end_at %>
 	</div>
	<div class="field">
		<%= f.label "Selecteer dagdelen" %>
		<%= f.select(:daypart, [["Ochtend", "Ochtend"], ["Middag", "Middag"], ["Avond", "Avond"], ["Nacht", "Nacht"]], {}, {:multiple => true}) %>
	</div>
	<div>
		<%= f.label 'Opmerkingen:' %> 
		<%= f.text_field :remark %>
 	</div>
	<hr>

  <%= f.fields_for :items do |builder| %>
		<%= render "item_fields", :f => builder %>
	<% end %>
	<p><%= link_to_add_fields "Benodigdheid toevoegen", f, :items %></p>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
