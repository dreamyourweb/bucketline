- content_for :header do
  %h1 Registreer
  %h4 Maak een bijdrage aan een bucket line

.four.columns
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f|
    = devise_error_messages!
    = f.label "Naam"
    = f.text_field :name
    = f.label :email
    = f.email_field :email
    = f.label "Wachtwoord"
    = f.password_field :password
    = f.label "Wachtwoord bevestigen"
    = f.password_field :password_confirmatio
    = f.submit "Registreren", :class=>"button"
  .login-links
  = render "links"