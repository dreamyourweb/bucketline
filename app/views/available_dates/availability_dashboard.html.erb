<h2>Overzicht alle beschikbaarheid</h2>
<p>Beschikbare specialisten geordend per datum, voor vandaag en verder. <%= link_to "Toon ook beschikbaarheid van voor vandaag.", :controller => "available_dates", :action => "availability_dashboard", :show => "all" %></p>
<div id="accordion2" class="accordion">
	<% @dates.each do |date| %>
		<div class="accordion-group">
			<div class="accordion-heading">
				<a class="accordion-toggle" href=<%= "#" + date.to_s %> data-parent="#accordion2" data-toggle="collapse"><%= pretty_date(date) %> (<%=@available_dates.where(:date => date).count %>)</a>
			</div>
			<div id=<%= date.to_s %> class="accordion-body collapse" style="height: 0px;">
				<div class="accordion-inner">
					<table class="admin-table table table-bordered table-striped">
						<tr>
							<th>Naam</th>
							<th>Dagdelen</th>
							<th>Expertise</th>		
							<th>Kan helpen met</th>		
							<th>Gereedschappen en materialen</th>		
							<th>Email</th>		
						</tr>
						<% @available_dates.where(:date => date).each do |available_date| %>
							<tr>
								<td><%= available_date.profile.name %></td>
								<td><%= build_dayparttext(available_date) %></td>
								<td><%= available_date.profile.expertise %></td>
								<td><%= available_date.profile.willing_to_help_with %></td>
								<td><%= available_date.profile.tools_and_materials %></td>
								<td><%= available_date.profile.user.email %></td>
							</tr>
						<% end %>	
					</table>
				</div>
			</div>
		</div>
	<% end %>
</div>

