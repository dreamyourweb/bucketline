<%= form_for(@user_role) do |f| %>
  <% if @user_role.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_role.errors.count, "error") %> prohibited this user_role from being saved:</h2>

      <ul>
      <% @user_role.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field control-group">
    <%= f.label "Gebruiker:", :class => "control-label" %>
    <div class="controls">
      <%= collection_select(:user_role, :user_id, @users, :id, :email) %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <label class="checkbox">
        <%= f.check_box :admin %>
        Verbind als beheerder
      </label>
    </div>
  </div>  

  <div class="actions">
    <%= f.submit "Gebruiker verbinden", :class => "button" %>
  </div>
<% end %>
