  %ul.nav-bar.vertical
    %li{class: (request.path == "/settings") ? "active" : ""}
      = link_to "Bucketline instellingen", "/settings"
    %li{class: (request.path == "/profiles") ? "active" : ""}
      = link_to "Deelnemers beheer", "/profiles"
    %li{class: (request.path == "/all_available_dates") ? "active" : ""}
      = link_to "Bucketline beschikbaarheid", "/all_available_dates"
