.interior-header.admin
  .row
    - if current_user.super_admin
      .large-4.columns
        .title-text.white-text.hide-for-small
          Administratie

      .large-8.columns
        %ul.inline-list
          %li
            = link_to "Bucket Lines", admin_initiatives_url(:subdomain => false), class: (request.path == admin_initiatives_path) ? "active" : ""
          %li
            = link_to "Preventieve Bucket Lines", admin_bucket_groups_url(:subdomain => false), class: (request.path == admin_bucket_groups_path) ? "active" : ""
          %li
            = link_to "Feedback berichten", admin_feedback_url(:subdomain => false), class: (request.path == admin_feedback_path) ? "active" : ""
          %li
            = link_to "Alle gebruikers", admin_profiles_url(:subdomain => false), class: (request.path == admin_profiles_path) ? "active" : ""

    - else
      .large-8.columns
        .title-text.white-text.hide-for-small
          Nieuwe Bucket Line

