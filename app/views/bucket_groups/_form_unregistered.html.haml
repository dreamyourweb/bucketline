= form_for @bucket_group do |f|
  .row
    .small-12.large-6.columns

      = f.label :creator_name, "Jouw naam"
      = f.text_field :creator_name

      = f.label :creator_email, "Jouw email"
      = f.email_field :creator_email

      = f.label :creator_password, "Je wachtwoord"
      = f.password_field :creator_password

      = f.label :creator_password_confirmation, "Je wachtwoord nogmaals"
      = f.password_field :creator_password_confirmation
      
      = f.label :name, "Naam Bucketgroup"
      = f.text_field :name

      = f.label :description, "Beschrijving Bucketgroup"
      = f.text_area :description
      
      = f.submit class: "button"