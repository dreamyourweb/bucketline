- content_for :header do
  = render :partial => "shared/site_admin_sub_nav" 

= link_to 'Nieuwe Preventieve Bucket Line', new_bucket_group_path, class: "large button"
  
%table.admin-table
  %thead
    %tr
      %th Preventieve Bucket Line
      %th Omschrijving
      %th
  %tbody
    - @bucket_groups.each do |group|
      %tr
        %td= group.name
        %td= group.description            
        %td
          = link_to 'Bewerken', admin_edit_bucket_group_url(group)
          |
          = link_to 'Verwijderen', bucket_group_url(group), confirm: 'Weet je zeker dat je deze preventieve Bucket Line wilt verwijderen? Dit kan niet ongedaan gemaakt worden!', method: :delete