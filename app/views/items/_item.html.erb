<div class = "well <%= get_item_color_class(item) %>" >
	<% if !item.provided %>
		<%= form_tag project_item_path(item.project, item), :method => "put", :class=>"item-form" do %>			
			<h3><%= item.name %> - Nog <%= item.items_left.to_s %> nodig</h3>
			<p class="item-details">- Project: <%= item.project.query %>.<br>- Item nodig van <%= pretty_date(item.start_at) %> tot en met <%= pretty_date(item.end_at) %><%= get_dayparts(item) %>.<%= get_contributors(item) %></p>

			<% if user_signed_in? %>
				<p>Aantal: <%= text_field_tag 'amount_to_give', 1, :class => "amount-input" %> <%= submit_tag "Dit wil ik bijdragen!" %></p>
			<% else %>
				<p><%= link_to "Log in", login_path %> of <%= link_to "meld je aan", new_user_registration_path %> om bij te dragen</p>
			<% end %>
		<% end %>
	<% else %>
			<h3><%= item.name %> - Voorzien</h3>
			<p class="item-details">- Project: <%= item.project.query %>.<br><%= get_contributors(item) %></p>
	<% end %>
	<% if current_user && current_user.admin %>
		<%= link_to "Bijbehorende project bewerken", edit_project_path(item.project) %>
	<% end %>
</div>

