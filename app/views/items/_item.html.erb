<div class = "well <%= get_item_color_class(item) %>" >
	<% if !item.provided %>
		<%= form_tag project_item_path(item.project, item), :method => "put", :class=>"item-form" do %>			
			<span class="label label-important pull-right">Nog <%= item.items_left.to_s %>/<%= item.amount %> nodig</span>
			<h3><%= item.name %></h3>
			<p>Project: <%= item.project.query %>.<br>Nodig van <%= pretty_date(item.start_at) %> tot en met <%= pretty_date(item.end_at) %><%= get_dayparts(item) %>.<%= get_contributors(item) %></p>

			<% if user_signed_in? %>
				<p>Aantal: <%= text_field_tag 'amount_to_give', 1, :class => "amount-input" %> <%= submit_tag "Dit wil ik bijdragen!", :class => "btn" %></p>
			<% else %>
				<p><%= link_to "Log in", login_path %> of <%= link_to "meld je aan", new_user_registration_path %> om bij te dragen</p>
			<% end %>
		<% end %>
	<% else %>
			<span class="label label-inverse pull-right">Voorzien</span>
			<h3><%= item.name %></h3>
			<p>Project: <%= item.project.query %>.<br><%= get_contributors(item) %></p>
	<% end %>
	<% if current_user && current_user.admin %>
		<%= link_to "Bijbehorende project bewerken", edit_project_path(item.project) %>
	<% end %>
</div>

