<h2><%= @question.query %></h2>

<p>Benodigdheden voor deze vraag</p>

<div>
	<ul class="unstyled">
	<% @items.each do |item| %>
		<li>
			<blockquote <%= if params[:highlight] == item.id.to_s then "class='highlight'" end %> >
				<% if item.provided %>
					<p><%= item.name %></p>
					<small><%= item.location %>, <%= item.start_at.to_s %> - <%= item.end_at.to_s %> - Deze bijdrage is al voorzien</small>
				<% else %>
					<%= form_tag question_item_path(@question, item), :method => "put" do %>			
						<p><%= item.name %>, nog <%= item.amount.to_s %> te gaan</p>
						<small><%= item.location %>, <%= item.start_at.ctime.to_s %> - <%= item.end_at.ctime.to_s %></small>
						Aantal: <%= text_field_tag 'amount_to_give', 1, :class => "amount-input" %> <%= submit_tag "Dit wil ik bijdragen!" %>
					<% end %>
				<% end %>
			</blockquote>
		</li>
	<% end %>
	</ul>
</div>

<% if user_signed_in? %>
	<%= link_to 'Vraag of items bewerken', edit_question_path(@question) + "?type=" + @question.type %>
<% end %>
